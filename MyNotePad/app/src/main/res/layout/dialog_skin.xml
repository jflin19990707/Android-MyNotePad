<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/blue_skin"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@color/md_light_blue_200_color_code"
        />
    <ImageView
        android:id="@+id/red_skin"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@color/md_red_200_color_code"
        />
    <ImageView
        android:id="@+id/yellow_skin"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@color/md_yellow_200_color_code"
        />
    <ImageView
        android:id="@+id/green_skin"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@color/md_green_200_color_code"
        />
</LinearLayout>